<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

    <View
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:background="@color/gray_F2F2F2"
            app:layout_constraintTop_toTopOf="parent" />

    <TimePicker
            android:id="@+id/tp_add_timer"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="14dp"
            android:timePickerMode="spinner"
            app:layout_constraintTop_toTopOf="parent" />

    <View
            android:id="@+id/line_add_timer1"
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:background="@color/gray_F2F2F2"
            app:layout_constraintTop_toBottomOf="@+id/tp_add_timer" />

    <TextView
            android:id="@+id/tv_add_timer_name_title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:text="@string/timer_name"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/ts_18"
            app:layout_constraintTop_toBottomOf="@+id/line_add_timer1" />

    <TextView
            android:id="@+id/tv_add_timer_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="48dp"
            android:layout_marginStart="110dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:gravity="right"
            android:textColor="@color/gray_cccccc"
            android:textSize="@dimen/ts_16"
           app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/tv_add_timer_name_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_add_timer_name_title" />

    <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginEnd="16dp"

            android:src="@mipmap/icon_right_arrow"
            app:layout_constraintBottom_toBottomOf="@+id/tv_add_timer_name_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_add_timer_name_title" />

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="20dp"
            android:background="@color/gray_F5F5F5"
            app:layout_constraintTop_toBottomOf="@+id/line_add_timer1" />

    <TextView
            android:id="@+id/tv_add_timer_repeat_title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:text="@string/repeat"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/ts_18"
            app:layout_constraintTop_toBottomOf="@+id/tv_add_timer_name_title" />

    <TextView
            android:id="@+id/tv_add_timer_repeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="48dp"
            android:textColor="@color/gray_cccccc"
            android:textSize="@dimen/ts_16"
            app:layout_constraintBottom_toBottomOf="@+id/tv_add_timer_repeat_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_add_timer_repeat_title" />

    <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginEnd="16dp"

            android:src="@mipmap/icon_right_arrow"
            app:layout_constraintBottom_toBottomOf="@+id/tv_add_timer_repeat_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_add_timer_repeat_title" />

    <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="60dp"
            android:background="@color/gray_F2F2F2"
            app:layout_constraintTop_toBottomOf="@+id/tv_add_timer_name_title" />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingBottom="10dp"
            android:text="@string/device_action"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/ts_18"
            app:layout_constraintTop_toBottomOf="@+id/tv_add_timer_repeat_title" />

</androidx.constraintlayout.widget.ConstraintLayout>